<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

	<record id="view_daily_plan_done_form" model="ir.ui.view">
		<field name="name">任务进度</field>
		<field name="model">daily.plan.done</field>
		<field name="arch" type="xml">
			<form string="任务进度" version="7.0">
			<separator string="当前计划" />
			<h3>
				<div>
					<field name="name" readonly="1"/>
				</div>
			</h3>
				<separator string="任务进度" />
					<group>
						<group>
							<field name="progress"/>
							<field name="hours" widget="float_time"/>
						</group>
						<group>
							<span>输入一个0-100之间的数字，当为100时表示任务完成</span>
						</group>
					</group>
					<separator string="情况说明" />
						<field name="notes"/>
				<footer>
					<button name="set_to_done" string="确认" type="object"
						default_focus="1" class="oe_highlight" />
					or
					<button string="取消" class="oe_link" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

        <record id="action_daily_plan_done" model="ir.actions.act_window">
            <field name="name">任务进度</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">daily.plan.done</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
 </data>
</odoo>
